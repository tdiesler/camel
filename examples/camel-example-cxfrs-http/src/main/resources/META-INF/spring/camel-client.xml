<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <camelContext xmlns="http://camel.apache.org/schema/spring">
    <!-- A camel route which invokes a REST service every 5th second -->
    <route>
      <from uri="timer:foo?delay=3s&amp;period=5s"/>
      <!-- set the http method to GET -->
      <setHeader headerName="CamelHttpMethod">
        <constant>GET</constant>
      </setHeader>
      <!-- set the http path to use -->
      <setHeader headerName="CamelHttpPath">
        <constant>/order/status/123</constant>
      </setHeader>
      <!-- invoke the REST service -->
      <log message="Getting order status for orderId 123"/>
      <!-- tell CXF-RS to use HTTP centric client -->
      <!-- must use InOut pattern so CXF-RS knows we want a response -->
      <to uri="cxfrs:http://localhost:8080?httpClientAPI=true" pattern="InOut"/>
      <!-- convert the reply to a String and log the response -->
      <convertBodyTo type="String"/>
      <to uri="log:response"/>
    </route>
  </camelContext>

</beans>
