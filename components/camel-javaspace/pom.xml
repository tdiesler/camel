<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<artifactId>camel-parent</artifactId>
		<groupId>org.apache.camel</groupId>
		<version>1.6.0.0-fuse</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>camel-javaspaces</artifactId>
	<packaging>bundle</packaging>
	<name>Camel :: Javaspaces</name>
	<description>Camel Javaspaces support</description>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skipTests>true</skipTests>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-spring</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-core</artifactId>
			<type>test-jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.jini</groupId>
			<artifactId>jini-core</artifactId>
			<version>2.1</version>
		</dependency>
		<dependency>
			<groupId>net.jini</groupId>
			<artifactId>jini-ext</artifactId>
			<version>2.1</version>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>integration-test</id>
			<activation>
				<property>
					<name>integration-test</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<skipTests>false</skipTests>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<properties>
		<camel.osgi.export.pkg>
			org.apache.camel.component.javaspaces.*
		</camel.osgi.export.pkg>
	</properties>
</project>
